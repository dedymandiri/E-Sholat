<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_mini_controller_main_background"
    tools:context=".slide_carasholat">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/cara_sholat"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cara Sholat"
        android:textColor="@color/hitam"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginTop="325dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Dilengkapi juga dengan penjelasan cara atau tutorial sholat dimana didalamnya berisi tata cara sholat mulai dari niat serta doa yang dikemas lengkap dan jelas. "
        android:textColor="@color/hitam"
        android:textSize="20dp"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/lewati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lewati"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginTop="580dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"/>



</RelativeLayout>