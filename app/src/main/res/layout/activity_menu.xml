<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_mini_controller_main_background"
    tools:context=".menu">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginTop="-100dp"
        app:srcCompat="@drawable/al_aqsa2" />

    <ImageView
        android:id="@+id/wajib"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/fitur_wajib" />

    <ImageView
        android:id="@+id/sunnah"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="335dp"
        app:srcCompat="@drawable/fitur_sunnah" />

    <ImageView
        android:id="@+id/tentang"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="470dp"
        app:srcCompat="@drawable/fitur_tentang" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="610dp"
        android:text="Selamat Datang"
        android:textColor="@color/putih"
        android:gravity="center"
        android:background="@color/silver"/>

</RelativeLayout>